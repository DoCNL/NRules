{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "NRules/**/*.csproj",
            "NRules.Integration/**/NRules.Integration.*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/NRules*Tests/**",
            "**/NRules.Meta/**"
          ]
        }
      ],
      "properties": {
        "TargetFramework": "netstandard2.1"
      },
      "dest": "api",
      "filter": "filterConfig.yml",
      "namespaceLayout": "flattened",
      "memberLayout": "samePage",
      "EnumSortOrder": "alphabetic"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "apidoc/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "../build/docs",
    "overwrite": {
      "files": [
        "apidoc/**.md"
      ]
    },
    "xref": [
      "https://learn.microsoft.com/en-us/dotnet/.xrefmap.json"
    ],
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "NRules",
      "_appTitle": "NRules",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/logo.png",
      "_enableSearch": true,
      "_lang": "en",
      "_gitContribute": {
        "branch": "develop"
      },
      "_gitUrlPattern": "github",
      "_appFooter": "<span>Copyright &copy; 2012-2023 <a href=\"https://github.com/snikolayev\">Sergiy Nikolayev</a> under the <a href=\"https://raw.github.com/NRules/NRules/main/LICENSE.txt\">MIT license</a>.</span>",
      "pdf": false
    }
  }
}